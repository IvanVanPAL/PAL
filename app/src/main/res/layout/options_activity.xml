<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="10dp"
                android:text="Изменить фон главного меню:"
                android:textColor="#000000"
                android:textSize="20sp" />

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="10dp"
                android:gravity="center|center_horizontal|top">

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="10dp"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img4"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:onClick="onImageClick"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/back4"
                        app:srcCompat="@drawable/back4" />

                    <ImageView
                        android:id="@+id/img3"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:onClick="onImageClick"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/back3"
                        app:srcCompat="@drawable/back3" />

                    <ImageView
                        android:id="@+id/img2"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:onClick="onImageClick"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/back2"
                        app:srcCompat="@drawable/back2" />

                    <ImageView
                        android:id="@+id/img1"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:onClick="onImageClick"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/back1"
                        app:srcCompat="@drawable/back1" />
                </TableRow>

                <TableRow
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center">

                    <ImageView
                        android:id="@+id/img5"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:onClick="onImageClick"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/back5"
                        app:srcCompat="@drawable/back5" />

                    <ImageView
                        android:id="@+id/img6"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:onClick="onImageClick"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/back6"
                        app:srcCompat="@drawable/back6" />

                    <ImageView
                        android:id="@+id/img7"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:onClick="onImageClick"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/back7"
                        app:srcCompat="@drawable/back7" />

                    <ImageView
                        android:id="@+id/img8"
                        android:layout_width="90dp"
                        android:layout_height="90dp"
                        android:onClick="onImageClick"
                        android:paddingLeft="5dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/back8"
                        app:srcCompat="@drawable/back8"
                        tools:ignore="SpeakableTextPresentCheck" />
                </TableRow>

            </TableLayout>

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>